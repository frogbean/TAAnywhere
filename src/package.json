{
  "name": "taanywhere",
  "version": "1.0.0",
  "description": "A Total Annihilation mod installer",
  "main": "main.js",
  "scripts": {
    "start": "electron ."
  },
  "author": "frogbean",
  "license": "ISC",
  "build": {
    "appId": "com.frogbean.taanywhere",
    "productName": "TAA Anywhere",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.games"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "extraResources": [
      {
        "from": "node_modules/7zip-bin",
        "to": "./resources/7zip-bin"
      }
    ]
  },
  "devDependencies": {
    "electron": "^26.1.0",
    "electron-builder": "^24.6.3",
    "electron-debug": "^3.2.0"
  },
  "dependencies": {
    "7zip-bin": "^5.2.0"
  }
}
